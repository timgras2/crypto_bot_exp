# =============================================================================
# BASIC TRADING PARAMETERS
# =============================================================================
MIN_PROFIT_PCT=5.0
TRAILING_PCT=3.0
MAX_TRADE_AMOUNT=10.0
CHECK_INTERVAL=10
MAX_RETRIES=3
RETRY_DELAY=5
RATE_LIMIT=300
API_TIMEOUT=30

# =============================================================================
# ASSET PROTECTION STRATEGY (v3.0 Upgrade Guide)
# =============================================================================
ASSET_PROTECTION_ENABLED=false
PROTECTED_ASSETS=BTC-EUR,ETH-EUR
MAX_PROTECTION_BUDGET=100.0

# DCA Strategy
DCA_ENABLED=true
DCA_LEVELS=15:0.3,25:0.4,40:0.3

# Swing Trading (Advanced Users)
SWING_TRADING_ENABLED=false
SWING_LEVELS=12:sell:0.15,18:sell:0.20,35:rebuy:0.40,50:rebuy:0.60

# Position Size Controls
MAX_POSITION_MULTIPLIER=2.0
POSITION_SIZE_CHECK_ENABLED=true

# Loss Circuit Breaker
LOSS_CIRCUIT_BREAKER_PCT=25.0
CIRCUIT_BREAKER_ENABLED=true

# Smart DCA Timing
DIRECTIONAL_DCA_ENABLED=true
DCA_MOMENTUM_HOURS=1
DCA_FALLING_MULTIPLIER=0.5
DCA_BOUNCING_MULTIPLIER=1.5
DCA_MOMENTUM_THRESHOLD=0.5

# Recovery Rebuy System
RECOVERY_REBUY_ENABLED=true
MIN_RECOVERY_THRESHOLD_PCT=15.0
RECOVERY_BOUNCE_PCT=8.0
RECOVERY_REBUY_ALLOCATION=0.3

# =============================================================================
# ENHANCED TRAILING PROFIT SYSTEM
# =============================================================================
ENHANCED_PROTECTION_ENABLED=true
TRAILING_START_GAIN_PCT=12.0
TRAILING_DISTANCE_PCT=8.0
TRAILING_INCREMENT_PCT=3.0
BUYBACK_TOLERANCE_PCT=5.0
MIN_TRADE_VALUE_EUR=20.0

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
BASE_STOP_LOSS_PCT=18.0
VOLATILITY_MULTIPLIER=1.5
EMERGENCY_STOP_LOSS_PCT=30.0
MAX_DAILY_TRADES=10

# =============================================================================
# PORTFOLIO MANAGEMENT
# =============================================================================
REBALANCING_ENABLED=false
TARGET_ALLOCATIONS=BTC-EUR:0.6,ETH-EUR:0.4

# =============================================================================
# SOCIAL MEDIA SENTIMENT ANALYSIS (OPTIONAL)
# =============================================================================
SENTIMENT_ENABLED=false
SENTIMENT_INFLUENCE=0.5
MIN_SENTIMENT_CONFIDENCE=0.3
MAX_POSITION_MULTIPLIER_SENTIMENT=1.5

# Reddit API (Required for sentiment analysis)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_secret
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password

# Discord API (Optional)
DISCORD_BOT_TOKEN=your_discord_bot_token